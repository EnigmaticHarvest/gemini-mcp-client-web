{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // For browser-compatible modules
    "moduleResolution": "bundler", // Or "Bundler" for newer setups, NodeNext is fine
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"], // Add DOM for browser types
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

